<%- include("../partials/header") %>

	<div class="container-review">

	<form action="/product/<%= product._id %>/addReview" method="POST">
		<h1>Add New Review to <%= product.name %></h1>
		
		<div class="form-group">
			<input class="form-control" type="text" name="text" placeholder="write a review" required>
		</div>
		<div class="form-group">
			<label>Rating:</label>
			<select name="rating">
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
			</select>
		</div>
		<div class="form-group">
			<button>Submit</button>
		</div>
		
		<a href="/product/<%= product._id %>">Go Back</a>
	</form>	
</div>

<%- include("../partials/footer") %>