<%- include("../partials/header") %>

	<div class="container-review">

	<form action="/manage-site/<%= admin %>/<%= product._id %>/edit?_method=PUT" method="POST">
		<h1>Edit <%= product.name %></h1>
		
		<div class="form-group">
			<input class="form-control" type="text" name="name" value="<%= product.name %>" required>
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="image" value="<%= product.image %>" required>
		</div>
		<div class="form-group">
			<input class="form-control" type="number" name="price" value="<%= product.price %>" required>
		</div>
		<div class="form-group">
			<input class="form-control" type="number" name="stock" value="<%= product.stock %>" required>
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="description" value="<%= product.description %>" required>
		</div>
		<div class="form-group">
			<select name="category" >
				<option>Select a category</option>
				<option value="men">Men</option>
				<option value="women">Women</option>
				<option value="grocery">Grocery</option>
				<option value="stationery">Stationery</option>
				<option value="used">Used</option>
				<option value="rent">Rent</option>
			</select>
		</div>
		<div class="form-group">
			<button>Submit</button>
		</div>
		
	</form>	
</div>

<%- include("../partials/footer") %>