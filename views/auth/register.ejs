<%- include("../partials/header") %>

	<div class="container-review">

	<form action="/register" method="POST">
		<h1>Sign Up</h1>
		
		<div class="form-group">
			<input class="form-control" type="email" name="email" placeholder="john@gmail.com" required>
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="username" placeholder="john" required>
		</div>
		<div class="form-group">
			<input class="form-control" type="password" name="password" placeholder="password" required>
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="phNumber" placeholder="phone number" required>
		</div>
		<div class="form-group">
			<button>Submit</button>
		</div>
		<a class="auth" href="/login">Already a registered user? Login here</a>
		<a class="auth" href="/seller/register">Signup as a seller?</a>
	</form>
</div>

<%- include("../partials/footer") %>